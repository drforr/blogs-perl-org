<div class="mainy">
	<!-- Page title -->
	<div class="page-title">
		<h2><i class="icon-list color"></i> Categories <small> manage categories</small></h2>
		<hr />
	</div>

	[% IF (category) %]

	<div class="col-md-12">
		<div class="awidget">
			<div class="awidget-head">
				<h3>Edit</h3>
			</div>
			<div class="awidget-body">

				[% INCLUDE components/alerts.tt %]

				<form method="post" action="/admin/categories/edit/[% category.id %]">

					<div class="form-group">
						<label class="col-lg-2 control-label">Name</label>
						<div class="col-lg-10">
							<input type="text" class="form-control" name="name" placeholder="Name" value="[% category.name %]" required>
						</div>
					</div>

					<br />
					<br />

					<div class="form-group">
						<label class="col-lg-2 control-label">Slug</label>
						<div class="col-lg-10">
							<input type="text" class="form-control" name="slug" placeholder="Slug" value="[% category.slug %]" required>
						</div>
					</div>

					<div class="form-group">
						<div class="col-lg-offset-2 col-lg-10">
							<hr />
							<button type="submit" class="btn btn-default">Update</button>
							<a href="/admin/categories">
								<button type="button" class="btn btn-danger">Cancel</button>
							</a>
						</div>
					</div>

					<br /><br /><br /><br />

				</form>
			</div>
		</div>
	</div>

	[% ELSE %]

	<div class="col-md-12">
		<div class="awidget">
			<div class="awidget-head">
				<h3>Add a new category</h3>
			</div>
			<div class="awidget-body">

				[% INCLUDE components/alerts.tt %]

				<form method="post" action="/admin/categories/add">

					<div class="form-group">
						<label class="col-lg-2 control-label">Name</label>
						<div class="col-lg-10">
							<input type="text" class="form-control" name="name" placeholder="Name" required>
						</div>
					</div>

					<br />
					<br />

					<div class="form-group">
						<label class="col-lg-2 control-label">Slug</label>
						<div class="col-lg-10">
							<input type="text" class="form-control" name="slug" placeholder="Slug" required>
						</div>
					</div>

					<div class="form-group">
						<div class="col-lg-offset-2 col-lg-10">
							<hr />
							<button type="submit" class="btn btn-default">Add</button>
							<a href="/admin/categories">
								<button type="button" class="btn btn-danger">Cancel</button>
							</a>
						</div>
					</div>

					<br />
					<br />
					<br />
					<br />

				</form>
			</div>
		</div>
	</div>

	[% END %]

	<div class="col-md-12">

		<div class="awidget">
			<div class="awidget-head">
				<h3>All categories</h3>
			</div>
			<div class="awidget-body">

				<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
					<thead>
						<tr>
							<th> Category </th>
							<th> Slug </th>
							<th> Created by </th>
							<th> Role in blog </th>
							<th> Actions </th>
						</tr>
					</thead>
					<tbody>

						[% FOREACH category IN categories %]

						<tr>
							<td> [% category.name %] </td>
							<td> [% category.slug %] </td>
							<td> [% category.user.name %] </td>
							<td> rolul in acest blog frumos </td>
							<td style="width: 5%">
								<a href="/admin/categories/edit/[% category.id %]">
									<button class="btn btn-xs btn-warning"><i class="icon-pencil"></i> </button>
								</a>
								<a href="/admin/categories/delete/[% category.id %]">
									<button class="btn btn-xs btn-danger"><i class="icon-remove"></i> </button>
								</a>
							</td>
						</tr>

						[% END %]

					</tbody>
				</table>
				
				<ul class="pagination pull-right">
					[% INCLUDE components/pagination.tt %]
				</ul>

				<div class="clearfix"></div>
				
			</div>
		</div>
	</div>
</div>